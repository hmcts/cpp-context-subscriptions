{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://moj.gov.uk/cpp/json/schemas/notificationnotify/events/notification-sent.json",
  "type": "object",
  "properties": {
    "notificationId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "sentTime": {
      "type": "string",
      "format": "date-time"
    },
    "completedAt": {
      "type": "string",
      "format": "date-time"
    },
    "sendToAddress": {
      "type": "string"
    },
    "replyToAddress": {
      "type": "string",
      "format": "email"
    },
    "emailSubject": {
      "type": "string"
    },
    "emailBody": {
      "type": "string"
    },
    "clientContext": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "notificationId",
    "sentTime"
  ]
}
